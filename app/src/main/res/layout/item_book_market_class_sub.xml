<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_book_market_class_item"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_book_search_result_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/item_book_search_result_title"
            app:srcCompat="@drawable/cover_default_new"
            tools:ignore="ContentDescription,VectorDrawableCompat"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="3:4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_book_search_result_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="4dp"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/item_book_search_result_title"
            android:text="@string/app_name"
            android:background="#11000000"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>