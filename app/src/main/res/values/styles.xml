<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppSplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSplashPrimary</item>
        <item name="colorPrimaryDark">@color/colorSplashPrimary</item>
        <item name="colorAccent">@color/colorSplashPrimary</item>
        <item name="android:windowBackground">@drawable/wlecom</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorSplashPrimary</item>
    </style>

    <style name="AppSplashTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppBookTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorReadPrimary</item>
        <item name="colorPrimaryDark">@color/colorReadPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBookTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBookTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBookTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBookTheme.ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#00ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppReadTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryRead</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRead</item>
        <item name="colorAccent">@color/colorAccentRead</item>
    </style>

    <style name="AppReadTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppReadTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppReadTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="roomRatingBar_1" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_layer</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
    </style>



</resources>
