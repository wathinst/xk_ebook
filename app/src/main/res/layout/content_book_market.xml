<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.activity.BookMarketActivity"
    tools:showIn="@layout/activity_book_market">

    <com.wxz.ebook.view.view.BookMarketClassView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_market_class_view_city"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.wxz.ebook.view.view.BookMarketClassView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_market_class_view_fantasy"
        app:layout_constraintTop_toBottomOf="@id/book_market_class_view_city"/>

    <com.wxz.ebook.view.view.BookMarketClassView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_market_class_view_xianXia"
        app:layout_constraintTop_toBottomOf="@id/book_market_class_view_fantasy"/>

    <com.wxz.ebook.view.view.BookMarketClassView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_market_class_view_military"
        app:layout_constraintTop_toBottomOf="@id/book_market_class_view_xianXia"/>

</android.support.constraint.ConstraintLayout>