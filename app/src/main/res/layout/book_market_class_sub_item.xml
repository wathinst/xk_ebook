<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/selector_book_market_class_item">

    <ImageView
        android:id="@+id/book_market_class_item_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/book_market_class_item_title"
        app:srcCompat="@drawable/cover_default_new"
        tools:ignore="ContentDescription,VectorDrawableCompat"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="3:4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/book_market_class_item_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="4dp"
        android:textSize="12sp"
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/book_market_class_item_title"/>

</android.support.constraint.ConstraintLayout>